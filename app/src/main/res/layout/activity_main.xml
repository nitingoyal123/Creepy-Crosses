<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context = ".MainActivity"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/halloween2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgTurn"
                    android:src="@drawable/halloween0"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turn"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:textSize="23sp"
                    android:layout_marginStart="3dp"/>


            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardBackgroundColor="#1C1C1C"
            app:cardElevation="10dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/grid"
                android:columnCount="3"
                android:rowCount="3"
                app:flow_verticalBias="0.10">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_height="110dp"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="setImages"
                    android:src="@drawable/halloween0"
                    android:padding="10dp" />
                <ImageView
                    android:id="@+id/img2"
                    android:layout_height="110dp"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="setImages"
                    android:src="@drawable/halloween0"
                    android:padding="10dp"/>
                <ImageView
                    android:id="@+id/img3"
                    android:layout_height="110dp"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="setImages"
                    android:src="@drawable/halloween0"
                    android:padding="10dp"/>
                <ImageView
                    android:id="@+id/img4"
                    android:layout_height="110dp"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="setImages"
                    android:src="@drawable/halloween0"
                    android:padding="10dp"/>
                <ImageView
                    android:id="@+id/img5"
                    android:layout_height="110dp"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="setImages"
                    android:src="@drawable/hat"
                    android:padding="10dp"/>
                <ImageView
                    android:id="@+id/img6"
                    android:layout_height="110dp"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="setImages"
                    android:src="@drawable/halloween0"
                    android:padding="10dp"/>
                <ImageView
                    android:id="@+id/img7"
                    android:layout_height="110dp"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="setImages"
                    android:src="@drawable/hat"
                    android:padding="10dp"/>
                <ImageView
                    android:id="@+id/img8"
                    android:layout_height="110dp"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="setImages"
                    android:src="@drawable/halloween0"
                    android:padding="10dp"/>
                <ImageView
                    android:id="@+id/img9"
                    android:layout_height="110dp"
                    android:layout_width="110dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="setImages"
                    android:src="@drawable/hat"
                    android:padding="10dp"/>

            </GridLayout>

        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/resetGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:onClick="reset"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:background="@drawable/button_background"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Reset"/>

    </LinearLayout>

</layout>